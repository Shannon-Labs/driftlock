# Server Configuration
SERVER_ADDRESS=:8080
DEBUG=true

# Database Configuration
DATABASE_URL=postgres://driftlock:driftlock@localhost:5432/driftlock?sslmode=disable

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Kafka Configuration
KAFKA_BROKERS=localhost:9092

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:3001

# Anomaly Detection Configuration
ANOMALY_THRESHOLD=1000.0

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_SUCCESS_URL=http://localhost:3000/billing/success
STRIPE_CANCEL_URL=http://localhost:3000/billing/cancel
STRIPE_CURRENCY=usd
STRIPE_FREE_PLAN_ID=price_free
STRIPE_PRO_PLAN_ID=price_pro
STRIPE_BUSINESS_PLAN_ID=price_business
STRIPE_USAGE_ENABLED=true

# Email Configuration
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@driftlock.com
SENDGRID_API_KEY=your-sendgrid-api-key

# Cloudflare Configuration
CLOUDFLARE_API_KEY=your-cloudflare-api-key
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# Analytics Configuration
GA4_MEASUREMENT_ID=G-XXXXXXXXXX
GA4_API_KEY=your-ga4-api-key
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOGS=true

# Audit and Compliance
AUDIT_LOG_ENABLED=true
MAX_EVENT_RETENTION=30