# Service
PORT=8080

# OpenTelemetry
# Set to enable OTEL export; e.g., http://otel-collector:4318 or http://localhost:4318
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=driftlockd
OTEL_ENV=dev

# Kafka Configuration (Phase 6)
KAFKA_ENABLED=false
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=driftlock-api
KAFKA_GROUP_ID=driftlock-api
KAFKA_EVENTS_TOPIC=otlp-events
KAFKA_ANOMALIES_TOPIC=anomaly-events
KAFKA_TLS_ENABLED=false

# Redis Configuration (Phase 6 - Distributed State)
REDIS_ENABLED=false
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=driftlock

# Tiered Storage Configuration (Phase 6 - Hot/Warm/Cold)
TIERED_STORAGE_ENABLED=false
HOT_RETENTION_DAYS=7
WARM_RETENTION_DAYS=83
ARCHIVE_INTERVAL=24h

# Storage Compression Configuration
COMPRESSION_ENABLED=true
COMPRESSION_ALGORITHM=openzl  # Options: openzl, zstd, lz4, gzip
COMPRESSION_LEVEL=3
COMPRESSION_MIN_SIZE=1024  # Only compress if data exceeds this size in bytes

# Version (optional; can be set at build time)
DRIFTLOCK_VERSION=0.0.1

