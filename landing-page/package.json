{
  "name": "driftlock-landing",
  "version": "1.0.0",
  "description": "DriftLock - Explainable Anomaly Detection for EU Banks",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "deploy:cloudflare": "npm run build && wrangler pages publish dist",
    "deploy:vercel": "npm run build && vercel --prod",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "analyze": "npm run build && npx vite-bundle-analyzer dist"
  },
  "dependencies": {
    "@tanstack/vue-query": "^5.0.0",
    "@vueuse/core": "^10.7.0",
    "@vueuse/head": "^2.0.0",
    "lucide-vue-next": "^0.303.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.0",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/tsconfig": "^0.5.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.3.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.25"
  }
}
