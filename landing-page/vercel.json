{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }
      ]
    }
  ],
  "env": {
    "VITE_APP_TITLE": "DriftLock - Explainable Anomaly Detection for EU Banks",
    "VITE_APP_DESCRIPTION": "Stop â‚¬50M DORA fines with explainable fraud detection that auditors love. Glass-box compliance with mathematical proof for every flagged transaction."
  }
}